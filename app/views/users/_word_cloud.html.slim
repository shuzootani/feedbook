= javascript_include_tag 'http://d3js.org/d3.v3.min.js'
= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/d3-cloud/1.2.4/d3.layout.cloud.js'

javascript:
    fetch("http://localhost:3000/word_cloud?user_id=" + #{current_user.id}).then(data => data.json()).then(data => {

        var height = 500;
    var width = 500;

    var random = d3.random.irwinHall(2)

    var countMax = d3.max(data, function (d) {
        return d.count
    });
    var sizeScale = d3.scale.linear().domain([0, countMax]).range([10, 100])
    var colorScale = d3.scale.category20();

    var words = data.map(function (d) {
        return {
            text: d.word,
            size: sizeScale(d.count)
        };
    });

    d3.layout.cloud()
        .size([width, height])
        .words(words)
        .padding(5)
        .rotate(function () {
            return ~~ (Math.random() * 2) * 90;
        })
        .font("Impact")
        .fontSize(function (d) {
            return d.size;
        })
        .on("end", draw)
        .start();

    function draw(words) {
        d3.select("body")
            .append("svg")
            .attr("width", width)
            .attr("height", height)
            .append("g")
            .attr("transform", "translate(" + width / 2 + "," + height / 2 + ")")
            .selectAll("text")
            .data(words)
            .enter()
            .append("text")
            .style("font-size", function (d) {
                return d.size + "px";
            })
            .style("font-family", "Impact")
            .style("fill", function (d, i) {
                return colorScale(i);
            })
            .style("cursor", "pointer")
            .attr("text-anchor", "middle")
            .attr("transform", function (d) {
                return "translate(" + [d.x, d.y] + ")rotate(" + d.rotate + ")";
            })
            .text(function (d) {
                return d.text;
            })
            .on("click", function (d, i) {
                window.open('https://www.google.co.jp/search?q=' + d.text, "_blank");
            });
    }
    })